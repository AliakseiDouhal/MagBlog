.slider.swiper-container
  max-width: 1055px
  width 100%
  height: 100%
  position static
  background-color white

  h2
    color: #00aedb
    font-weight: bold
    text-transform: uppercase
    font-size: 1.188rem
    margin 10px 0 15px

  p
    color: rgb(106, 102, 102)
    font-size 1rem
    font-weight bold
    text-align left
    max-width 300px
    width 100%
    margin 15px 0 0

  .swiper-slide
    width 33.3333%
    text-align: center
    font-size: 18px
    /* Center slide text vertically */
    display: -webkit-box
    display: -ms-flexbox
    display: -webkit-flex
    display: flex
    -webkit-box-pack: center
    -ms-flex-pack: center
    -webkit-justify-content: center
    justify-content: center
    -webkit-box-align: center
    -ms-flex-align: center
    -webkit-align-items: center
    align-items: center
    img
      max-width 300px
      width 100%

.stories-class
  text-transform uppercase
  padding-left 33px
  color: white
  position relative
  max-width 300px
  width 100%
  height 35px
  text-align left
  font-size 1.188rem

  span
    display block
    margin-top 4px

  span:before
    content ""
    position absolute
    top: 11px
    left 15px
    width: 0
    height: 0
    border-style: solid
    border-width: 6px 0 6px 8px
    border-color: transparent transparent transparent #ffffff

.cinema
  background-color #00aedb

.travel
  background-color #f78f1d

.television
  background-color #ec098d

.swiper-container
  width: 100%
  height: 300px
  margin-left: auto
  margin-right: auto

.swiper-slide
  background-size: cover
  background-position: center

.gallery-top
  max-height: 377px
  width: 100%

.gallery-thumbs
  max-height: 152px
  box-sizing: border-box
  padding: 10px 0

.gallery-thumbs .swiper-slide
  width: 25%
  height: 100%

@media screen and (min-width: 991px)
  .slider-button-prev
    position absolute
    left: 10px
    top: 260px
    width: 0
    height: 0
    border-style: solid
    border-width: 12.5px 15px 12.5px 0
    border-color: transparent #00aedb transparent transparent

  .slider-button-next
    position absolute
    right: 10px
    top: 260px
    width: 0
    height: 0
    border-style: solid
    border-width: 12.5px 0 12.5px 15px
    border-color: transparent transparent transparent #ec098e


@media screen and (max-width: 600px)
  .slider.swiper-container

    .swiper-slide
      width 80%

    .swiper-wrapper
      width 80%

