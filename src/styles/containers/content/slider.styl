.swiper-container
  max-width: 1055px
  height: 100%
  margin auto
  background-color white
  padding 0 30px
  position relative

  h2
    color: #00aedb
    font-weight: bold
    text-transform: uppercase
    font-size: 1.188rem
    margin 10px 0 15px

  p
    color: rgb(106, 102, 102)
    font-size 1rem
    font-weight bold
    text-align left
    max-width 326px
    width 100%
    margin 15px 0 0


.swiper-slide
  text-align: center
  font-size: 18px
  /* Center slide text vertically */
  display: -webkit-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex
  -webkit-box-pack: center
  -ms-flex-pack: center
  -webkit-justify-content: center
  justify-content: center
  -webkit-box-align: center
  -ms-flex-align: center
  -webkit-align-items: center
  align-items: center

.stories-class
  text-transform uppercase
  padding-left 33px
  color: white
  position relative
  max-width 326px
  width 100%
  height 35px
  text-align left
  font-size 1.188rem

  span
    display block
    margin-top 4px

  span:before
    content ""
    position absolute
    top: 11px
    left 15px
    width: 0
    height: 0
    border-style: solid
    border-width: 6px 0 6px 8px
    border-color: transparent transparent transparent #ffffff

.cinema
  background-color #00aedb

.travel
  background-color #f78f1d

.television
  background-color #ec098d

.slider-button-prev
  position absolute
  left: 10px
  top: 260px
  width: 0
  height: 0
  border-style: solid
  border-width: 12.5px 15px 12.5px 0
  border-color: transparent #00aedb transparent transparent

.slider-button-next
  position absolute
  right: 10px
  top: 260px
  width: 0
  height: 0
  border-style: solid
  border-width: 12.5px 0 12.5px 15px
  border-color: transparent transparent transparent #ec098e