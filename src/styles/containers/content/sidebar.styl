.sidebar
  padding-left 15px
  padding-top 30px
  max-width 36%
  width 100%
  p
    margin 0
    font-size: 0.8125rem
    color: rgb(73, 73, 73)
    text-align: left

  ul
    padding 0

.stories-trap
  max-width: 200px
  @extend .trap

.block-name
  max-width 100%
  width 100%
  height 36px
  background-color #5261ac

  &-text
    text-transform uppercase
    text-align: left
    display block
    color white
    font-size 1.125rem
    padding: 5px 15px 0 15px

.category
  margin-top  5px
  width 100%
  height 36px
  &-child
    width 33.3%
    height 100%
    text-transform: uppercase
    color white
    font-size 1.125rem
    text-align center
    padding-top 5px

  & div:nth-child(1)
    background-color #ec098d
    @extend .category-child

  & div:nth-child(2)
    background-color #f78f1d
    @extend .category-child

  & div:nth-child(3)
    background-color #00aedb
    @extend .category-child

.category-article
  min-height 100px
  padding  15px 0 20px
  border-bottom solid #dedddd 1px
  &:nth-last-child(1)
    border none
  img
    width 83px
    height 100px

.article
  padding-left: 10px
  h3
    font-size 0.875rem
    color: rgb(0, 174, 219)
    font-weight bold

.also-like
  img
    width 78px
    height 78px

.like-prediction
  padding 15px 0

.thesis
  padding-left 10px
  a
    font-size 0.8125rem
    color: #00aedb

.archive-note
  list-style none
  padding  15px 0 10px 25px
  border-bottom: solid #dedddd 1px
  position relative
  color: rgb(73, 73, 73)
  text-align left
  font-size 0.8125rem

  &:nth-last-child(1)
    border: none
  &:before
    content: ''
    position absolute
    top: 21px
    left 7px
    width: 0
    height: 0
    border-style: solid
    border-width: 6px 0 6px 8px
    border-color: transparent transparent transparent #5261ac

