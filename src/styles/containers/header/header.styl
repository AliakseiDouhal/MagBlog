header
  max-width 1055px
  margin auto
  position relative
  &:before
    content: ''
    width: 410px
    height: 464px
    position: absolute
    top: -150px
    left: -444px
    background url("/img/Layer-13.png") no-repeat

  input.form-control
    height: 35px
    width 74% !important
    max-width 320px
    border-radius 0
    &:focus
      border-color: #777
      outline: 0
      -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px #777
      box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px #777

.navbar
  padding-left 0
  padding-right 0

.navbar-toggler
  position relative
  border: none
  &:focus,
  &:active
    outline: 0
  & span
    display: block
    background-color: #444
    height: 3px
    width: 25px
    margin-top: 4px
    margin-bottom: 4px
    transform: rotate(0deg)
    position: relative
    left: 0
    opacity: 1

  & span:nth-child(1),
  & span:nth-child(2),
  & span:nth-child(3)
    transition: transform .35s ease-in-out, background-color .35s ease-in-out

  &:not(.collapsed)
    & span:nth-child(1)
      position: absolute
      left: 12px
      top: 10px
      transform: rotate(-135deg)
      opacity: 0.9

    & span:nth-child(2)
      height: 12px
      visibility: hidden
      background-color: transparent

    & span:nth-child(3)
      position: absolute
      left: 12px
      top: 10px
      transform: rotate(135deg)
      opacity: 0.9

.navbar-collapse .nav-item
  height 36px
  transition: opacity .4s ease-in-out, border-color .4s ease-in-out, box-shadow .4s ease-in-out
  &:hover
    opacity 0.7
    border: solid 1px inherit
  &:nth-child(1)
    background-color #00aedb
  &:nth-child(2)
    background-color #8cc63f
  &:nth-child(3)
    background-color #5261ac
  &:nth-child(4)
    background-color #00aedb
  &:nth-child(5)
    background-color #f78f1d
  &:nth-child(6)
    background-color #ff0000
  &:nth-child(7)
    background-color #898989

.navbar-light .navbar-nav .nav-link
  color: white
  transition color .4s ease-in-out
  font-weight bold

.navbar-expand-md .navbar-nav .nav-link
  padding-right: 15px
  padding-left: 15px

.form-inline
  max-width 438px
  width 41.5%

  &::-webkit-input-placeholder /* Chrome/Opera/Safari */
    color: #777777

  &::-moz-placeholder /* Firefox 19+ */
    color: #777777

  &:-ms-input-placeholder  /* IE 10+ */
    color: #777777

  &:-moz-placeholder  /* Firefox 18- */
    color: #777777

.button--search
  @extend .button
  color white
  height 35px
  text-transform uppercase
  width 26%
  max-width 120px
  background-color #00aedb

@media screen and (max-width: 767px)
  header input.form-control
    width 62%!important

  .button--search
    width 38%

@media screen and (max-width: 991px)
  .navbar
    padding 0

  .navbar-light .navbar-nav .nav-link
    text-align center

