footer
  position relative
  margin auto
  max-width: 1055px
  &:before
    max-width: 1055px
    width: 100%
    background: url(/img/colorful.jpg) repeat-x
    height: 8px
    position: absolute
    left: 0
    top: 0
    content: ""

@media screen and (min-width: 767px) and (max-width: 1100px)
  footer
    max-width: calc(100% - 26px)

